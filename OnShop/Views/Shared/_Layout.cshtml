    const searchInput = document.getElementById('searchInput');
    const searchButton = document.getElementById('searchButton');

    // Add an event listener to the search button
    searchButton.addEventListener('click', () => {
        performSearch();
    });

    // Add an event listener for the Enter key to perform the search
    searchInput.addEventListener('keypress', (event) => {
        if (event.key === 'Enter') {
            event.preventDefault();
            performSearch();
        }
    });

    function performSearch() {
        // Get the search query from the input element
        const searchQuery = searchInput.value.trim();

        // Perform the search based on the search query
        // Make an AJAX request to the server to get the search results
        if (searchQuery !== '') {
            $.ajax({
                type: 'GET',
                url: '/Product/Search',
