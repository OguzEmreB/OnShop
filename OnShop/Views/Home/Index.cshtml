<style>

    .body {
        display: flex;
        flex: auto;
        height: 800px;
        background-color: #1c2937;
    }

    .container {
        margin-top: 30px;
        width: 100%;
        height: 750px;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        border: 4px solid #ff6a00;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .image-display {
         
        flex: 1;
        text-align: center;
        width: 100%;
        max-height: 600px;
        background-image: url('/images/hb4.png');  
        background-size: cover; 
        background-position: center;  
        background-repeat: no-repeat;
      

    }

        .image-display img {
            flex: auto;
            margin-top: 55px;
            float: right;
            width: 50%;
            max-height: 400px;
            max-width: 750px;
            object-fit: contain;
            background-size: contain;
        }

    .header {
        width: 100%;
        text-align: center;
    }

        .header li {
            width: 100%;
          
            color: white;
            font-weight: bold;
            font-size: 18px;
            padding: 30px;
            text-align: center;
        }


        .header nav ul {
            cursor: pointer;
            flex: auto;
            align-items: center;
            height: 50px;
            width: 100%;
            background-color: #ff6a00;
            display: block;
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: space-around;
        }

    .product-list {
        display: flex;
        gap: 30px;
    }

    .product {
        flex: auto;
        justify-content: center;
        min-width: 100px;
        width: calc(100% / 6 - 10px);
        height: 100px;
        background-color: #FFF;
        cursor: pointer;
    }

        .product img {

            width: 100%;
            max-width: 100px;
            height: 100%;
            object-fit: contain;
        }

</style>

<div class="body">

    <div class="container">
        <div class="header">
            <nav>
                <ul>
                    <li onclick="changeCategory('Shoes')">Shoes</li>
                    <li onclick="changeCategory('Tshirts')">Tshirts</li>
                    <li onclick="changeCategory('Computer')">Computer</li>
                    <li onclick="changeCategory('HG')">Home&garden</li>
                    <li onclick="changeCategory('Tools')">Tools</li>
                  
                </ul>
            </nav>
        </div>
        <div class="image-display">
            <img id="displayed-image" src="" alt="Product Photo">
        </div>
        <div class="product-list">
            <div class="product" onclick="showProductImage('/shoes/shoe3.png')">       <img src="/shoes/shoe3.png" >      </div>
            <div class="product" onclick="showProductImage('/shoes/shoe4.png')">       <img src="/shoes/shoe4.png">      </div>
           
            <div class="product" onclick="showProductImage('/shoes/shoe6.png')">       <img src="/shoes/shoe6.png">      </div>
            <div class="product" onclick="showProductImage('/shoes/shoe7.png')">       <img src="/shoes/shoe7.png">      </div>
            <div class="product" onclick="showProductImage('/shoes/shoe8.png')">       <img src="/shoes/shoe8.png">      </div>
          
        </div>
    </div>

</div>



<script>

    window.onload = function () {
      
        showProductImage('/shoes/shoe3.png');
    };

