                                    <div class="product" onclick="showProductImage('/shoes/shoe6.png')">       <img src="/shoes/shoe6.png">      </div>
                                    <div class="product" onclick="showProductImage('/shoes/shoe7.png')">       <img src="/shoes/shoe7.png">      </div>
                                    <div class="product" onclick="showProductImage('/shoes/shoe8.png')">       <img src="/shoes/shoe8.png">      </div>
    <!-- Add more products for Giyim category here -->
        `;
        } else if (category === "Tshirts") {
            products = `
          <div class="product" onclick="showProductImage('/Tshirts/Tshirt4.png')">  <img src="/Tshirts/Tshirt4.png">   </div>
          <div class="product" onclick="showProductImage('/Tshirts/Tshirt5.png')">  <img src="/Tshirts/Tshirt5.png">   </div>
          <div class="product" onclick="showProductImage('/Tshirts/Tshirt6.png')">  <img src="/Tshirts/Tshirt6.png">   </div>
          <div class="product" onclick="showProductImage('/Tshirts/Tshirt7.png')">  <img src="/Tshirts/Tshirt7.png">   </div>
          <div class="product" onclick="showProductImage('/Tshirts/Tshirt8.png')">  <img src="/Tshirts/Tshirt8.png">   </div>


            <!-- Add more products for Tools category here -->
                `;
        }
      else if (category === "Tools") {
        products = `
                    <div class="product" onclick="showProductImage('/tools/drill1.png')">        <img src="/Tools/drill1.png">        </div>
                    <div class="product" onclick="showProductImage('/tools/screwdriver1.png')">  <img src="/Tools/screwdriver1.png">  </div>
                        <div class="product" onclick="showProductImage('/tools/pliers1.png')">  <img src="/Tools/pliers1.png">  </div>
        <!-- Add more products for Tools category here -->
            `;
    }
    else if (category === "HG") {
        products = `
                    <div class="product" onclick="showProductImage('/hg/chair1.png')">  <img src="/hg/chair1.png">        </div>
                                <div class="product" onclick="showProductImage('/hg/sofa2.png')">  <img src="/hg/sofa2.png">        </div>
                            <div class="product" onclick="showProductImage('/hg/washingmachine1.png')">  <img src="/hg/washingmachine1.png">        </div>
        <!-- Add more products for Tools category here -->
            `;
    }
    else if (category === "Computer") {
        products = `
                <div class="product" onclick="showProductImage('/Monitors/Monitor1.png')">             <img src="/Monitors/Monitor1.png">        </div>
               <div class="product" onclick="showProductImage('/Monitors/Monitor2.png')">          <img src="/Monitors/Monitor2.png">        </div>
                <div class="product" onclick="showProductImage('/Keyboards/Keyboard1.png')">         <img src="/Keyboards/Keyboard1.png">        </div>
                <div class="product" onclick="showProductImage('/Mouse/Mouse2.png')">         <img src="/Mouse/Mouse2.png">        </div>
        <!-- Add more products for Tools category here -->
            `;
    }

    productContainer.innerHTML = products;
    }

    function showProductImage(src) {
        const imageDisplay = document.getElementById("displayed-image");
        imageDisplay.src = src;
        imageDisplay.style.display = "block";
    }

</script>