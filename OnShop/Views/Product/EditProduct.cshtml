@model UserProducts

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Edit Product</h1>
    <form asp-action="EditProduct" method="post">
        <input type="hidden" asp-for="ProductId" />

       

        <div class="form-group">
            <label asp-for="ProductName">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Quantity">Quantity</label>
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">Image Url</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        
        <input type="hidden" asp-for="CategoryName" />
        <input type="hidden" asp-for="CategoryId" />
        <input type="hidden" asp-for="UserProductId" />

        <input type="hidden" asp-for="ApplicationUser.Id" />
        <input type="hidden" asp-for="ApplicationUser.FirstName" />
        <input type="hidden" asp-for="ApplicationUser.LastName" />
     

        <button type="submit" class="btn btn-primary">Update Product</button>
    </form>
</div>
<div asp-validation-summary="All"></div>
